{
    "name": "codappix/search_core",
    "type": "typo3-cms-extension",
    "description": "Codappix Search Core.",
    "homepage": "https://github.com/Codappix/search_core",
    "license": ["GPL-2.0-or-later"],
    "autoload": {
        "psr-4": {
            "Codappix\\SearchCore\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Codappix\\SearchCore\\Tests\\": "Tests/",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
        }
    },
    "require": {
        "php": ">=7.2.0 <8",
        "typo3/cms-core": "^9.5",
        "ruflin/elastica": "^3.2"
    },
    "suggests": {
        "typo3/cms-form": "To update indexed records via Formframework."
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "typo3/testing-framework": "^4.12",
        "typo3/cms-form": "^9.5"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/web/typo3conf/ext/",
            "[ -L .Build/web/typo3conf/ext/search_core ] || ln -snvf ../../../../. .Build/web/typo3conf/ext/search_core"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/web"
        }
    },
    "authors": [
        {
            "name": "Justus Leon Moroni",
            "email": "developer@leonmrni.com",
            "role": "lead"
        },
        {
            "name": "Daniel Siepmann",
            "email": "coding@daniel-siepmann.de",
            "role": "developer"
        }
    ]
}
